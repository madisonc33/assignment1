<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.header</title>
    <link href="~/css/mystyles.css" rel="stylesheet" />
    <link rel="icon" href="img/codeicon.png">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Dawning+of+a+New+Day&display=swap" rel="stylesheet">
</head>
<body class="font">
    <h1 class="bigfont">@ViewBag.title</h1>
    <h4 class="smaller">@ViewBag.preferredName</h4>
    <header>
        <menu>
            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-controller="Home" asp-action="GradeCalc">Grade Calculator</a></li>
        </menu>
    </header>

    @RenderBody()

    <footer>Copyright 2021</footer>

    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/js/gradecalc.js"></script>
</body>
</html>